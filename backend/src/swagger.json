{
   "swagger": "2.0",
   "info": {
      "title": "Dr Pizza API for Swagger Documentation",
      "contact": {
         "email": "jfelipe16@gmail.com"
      },
      "version": "1.0.0"
   },
   "schemes": ["http"],
   "servers": [{ "url": "http://localhost:3333/" }],
   "securityDefinitions": {
      "bearerAuth": {
         "name": "Authorization",
         "in": "header",
         "type": "apiKey",
         "description": "JWT Authorization header"
      }
   },
   "paths": {
      "/user": {
         "post": {
            "tags": ["Usuario"],
            "description": "Create user",
            "consumes": "application/json",
            "parameters": [
               {
                  "required": true,
                  "in": "body",
                  "name": "user",
                  "schema": {
                     "$ref": "#/definitions/UserRequest"
                  }
               }
            ],
            "responses": {
               "200": {
                  "description": "Success",
                  "schema": {
                     "$ref": "#/definitions/UserResponse"
                  }
               },
               "400": {
                  "description": "Bad Request",
                  "schema": {
                     "$ref": "#/definitions/ErrorResponse"
                  }
               }
            }
         }
      },
      "/login": {
         "post": {
            "tags": ["Login"],
            "description": "Login",
            "consumes": "application/json",
            "parameters": [
               {
                  "required": true,
                  "in": "body",
                  "name": "auth",
                  "schema": {
                     "$ref": "#/definitions/AuthRequest"
                  }
               }
            ],
            "responses": {
               "200": {
                  "description": "Success",
                  "schema": {
                     "$ref": "#/definitions/AuthResponse"
                  }
               },
               "400": {
                  "description": "Bad Request",
                  "schema": {
                     "$ref": "#/definitions/ErrorResponse"
                  }
               }
            }
         }
      },
      "/user/info": {
         "get": {
            "tags": ["Usuario"],
            "description": "User detail",
            "security": [{ "bearerAuth": [] }],
            "parameters": [
               {
                  "name": "user_id",
                  "required": true,
                  "in": "query",
                  "type": "string"
               }
            ],
            "responses": {
               "200": {
                  "description": "Success",
                  "schema": {
                     "$ref": "#/definitions/UserResponse"
                  }
               },
               "400": {
                  "description": "Bad Request",
                  "schema": {
                     "$ref": "#/definitions/ErrorResponse"
                  }
               },
               "401": {
                  "description": "Unauthorized"
               }
            }
         }
      },
      "/category": {
         "post": {
            "tags": ["Categoria"],
            "description": "Create category",
            "consumes": "application/json",
            "security": [{ "bearerAuth": [] }],
            "parameters": [
               {
                  "required": true,
                  "in": "body",
                  "name": "user",
                  "schema": {
                     "$ref": "#/definitions/CategoryRequest"
                  }
               }
            ],
            "responses": {
               "200": {
                  "description": "Success",
                  "schema": {
                     "$ref": "#/definitions/CategoryResponse"
                  }
               },
               "400": {
                  "description": "Bad Request",
                  "schema": {
                     "$ref": "#/definitions/ErrorResponse"
                  }
               },
               "401": {
                  "description": "Unauthorized"
               }
            }
         }
      },
      "/category/list": {
         "get": {
            "tags": ["Categoria"],
            "description": "List categories",
            "security": [{ "bearerAuth": [] }],
            "responses": {
               "200": {
                  "description": "Success",
                  "schema": {
                     "type": "array",
                     "items": {
                        "$ref": "#/definitions/CategoryResponse"
                     }
                  }
               },
               "401": {
                  "description": "Unauthorized"
               }
            }
         }
      },
      "/product": {
         "post": {
            "tags": ["Produto"],
            "description": "Create product",
            "consumes": "multipart/form-data",
            "security": [{ "bearerAuth": [] }],
            "parameters": [
               {
                  "in": "formData",
                  "name": "file",
                  "type": "file"
               },
               {
                  "required": true,
                  "in": "formData",
                  "name": "name",
                  "type": "string"
               },
               {
                  "required": true,
                  "in": "formData",
                  "name": "price",
                  "type": "string"
               },
               {
                  "required": true,
                  "in": "formData",
                  "name": "description",
                  "type": "string"
               },
               {
                  "required": true,
                  "in": "formData",
                  "name": "category_id",
                  "type": "string"
               }
            ],
            "responses": {
               "200": {
                  "description": "Success",
                  "schema": {
                     "$ref": "#/definitions/ProductResponse"
                  }
               },
               "400": {
                  "description": "Bad Request",
                  "schema": {
                     "$ref": "#/definitions/ErrorResponse"
                  }
               },
               "401": {
                  "description": "Unauthorized"
               }
            }
         }
      },
      "/product/find": {
         "get": {
            "tags": ["Produto"],
            "description": "List products by category id",
            "security": [{ "bearerAuth": [] }],
            "parameters": [
               {
                  "name": "category_id",
                  "required": true,
                  "in": "query",
                  "type": "string"
               }
            ],
            "responses": {
               "200": {
                  "description": "Success",
                  "schema": {
                     "type": "array",
                     "items": {
                        "$ref": "#/definitions/ProductResponse"
                     }
                  }
               },
               "400": {
                  "description": "Bad Request",
                  "schema": {
                     "$ref": "#/definitions/ErrorResponse"
                  }
               },
               "401": {
                  "description": "Unauthorized"
               }
            }
         }
      }
   },
   "definitions": {
      "UserRequest": {
         "properties": {
            "name": {
               "type": "string",
               "example": "Your name"
            },
            "email": {
               "type": "string",
               "example": "Your email"
            },
            "password": {
               "type": "string",
               "example": "Create a password"
            }
         }
      },
      "UserResponse": {
         "properties": {
            "id": {
               "type": "string",
               "example": "User id"
            },
            "name": {
               "type": "string",
               "example": "User name"
            },
            "email": {
               "type": "string",
               "example": "User email"
            }
         }
      },
      "AuthRequest": {
         "properties": {
            "email": {
               "type": "string",
               "example": "User email"
            },
            "password": {
               "type": "string",
               "example": "User password"
            }
         }
      },
      "AuthResponse": {
         "properties": {
            "id": {
               "type": "string",
               "example": "User id"
            },
            "name": {
               "type": "string",
               "example": "User name"
            },
            "email": {
               "type": "string",
               "example": "User email"
            },
            "token": {
               "type": "string",
               "example": "User token"
            }
         }
      },
      "CategoryRequest": {
         "properties": {
            "name": {
               "type": "string",
               "example": "Category name"
            }
         }
      },
      "CategoryResponse": {
         "properties": {
            "id": {
               "type": "string",
               "example": "Category id"
            },
            "name": {
               "type": "string",
               "example": "Category name"
            }
         }
      },
      "ProductResponse": {
         "properties": {
            "id": {
               "type": "string",
               "example": "Product id"
            },
            "name": {
               "type": "string",
               "example": "Product name"
            },
            "price": {
               "type": "string",
               "example": "Product price"
            },
            "description": {
               "type": "string",
               "example": "Description product"
            },
            "banner": {
               "type": "string",
               "example": "Banner product"
            },
            "created_at": {
               "type": "string",
               "example": "Created date of product"
            },
            "updated_at": {
               "type": "string",
               "example": "Updated date of product"
            },
            "category_id": {
               "type": "string",
               "example": "Category id"
            }
         }
      },
      "ErrorResponse": {
         "properties": {
            "error": {
               "type": "string"
            }
         }
      }
   }
}
